generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  passwordHash  String    @map("password_hash")
  name          String?
  emailVerified Boolean   @default(false) @map("email_verified")
  emailToken    String?   @map("email_token")
  trialEndsAt   DateTime? @map("trial_ends_at")
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")
  
  articles      Article[]
  drafts        Draft[]
  apiKeys       ApiKey[]
  settings      Settings?
  researchQueries ResearchQuery[]
  mediaAssets   MediaAsset[]
  subscription  Subscription?
  usage         Usage[]
  tokenUsages   TokenUsage[]
  platformApiKey PlatformApiKey?
  notifications Notification[]
  feedbacks     Feedback[]
  generationFailures GenerationFailure[]
  
  @@map("users")
}

model Article {
  id              String   @id @default(uuid())
  userId          String   @map("user_id")
  title           String
  slug            String   @unique
  seoTitle        String?  @map("seo_title")
  metaDescription String?  @map("meta_description")
  focusKeyphrase  String?  @map("focus_keyphrase")
  content         String   @db.Text
  htmlContent     String   @db.Text @map("html_content")
  status          ArticleStatus @default(DRAFT)
  wordCount       Int      @default(0) @map("word_count")
  publishedAt     DateTime? @map("published_at")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  mediaAssets     MediaAsset[]
  
  @@index([userId])
  @@index([slug])
  @@index([status])
  @@map("articles")
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
}

model Draft {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  title       String
  config      Json
  metadata    Json?
  sections    Json
  ctaContent  String?  @db.Text @map("cta_content")
  autosave    Boolean  @default(true)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([updatedAt])
  @@map("drafts")
}

model ApiKey {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  provider    Provider
  encryptedKey String  @map("encrypted_key") @db.Text
  isActive    Boolean  @default(true) @map("is_active")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@unique([userId, provider])
  @@index([userId])
  @@map("api_keys")
}

enum Provider {
  GEMINI
  OPENAI
  ANTHROPIC
  LLAMA
}

model MediaAsset {
  id          String      @id @default(uuid())
  userId      String      @map("user_id")
  articleId   String?     @map("article_id")
  type        MediaType
  provider    Provider
  prompt      String      @db.Text
  style       String?
  aspectRatio String?     @map("aspect_ratio")
  url         String?
  metadata    Json?
  createdAt   DateTime    @default(now()) @map("created_at")
  
  user        User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  article     Article?    @relation(fields: [articleId], references: [id], onDelete: SetNull)
  
  @@index([userId])
  @@index([articleId])
  @@index([type])
  @@map("media_assets")
}

enum MediaType {
  IMAGE
  VIDEO
  AUDIO
}

model ResearchQuery {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  query       String   @db.Text
  summary     String?  @db.Text
  sources     Json?
  cached      Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@map("research_queries")
}

model Settings {
  id              String   @id @default(uuid())
  userId          String   @unique @map("user_id")
  defaultProvider Provider @default(GEMINI) @map("default_provider")
  focusKeyphrase  String?  @map("focus_keyphrase")
  preferences     Json     @default("{}")
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")
  
  user            User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("settings")
}

model Subscription {
  id                  String             @id @default(uuid())
  userId              String             @unique @map("user_id")
  plan                SubscriptionPlan   @default(FREE)
  status              SubscriptionStatus @default(ACTIVE)
  currentPeriodStart  DateTime           @map("current_period_start")
  currentPeriodEnd    DateTime           @map("current_period_end")
  cancelAtPeriodEnd   Boolean            @default(false) @map("cancel_at_period_end")
  stripeSubscriptionId String?           @unique @map("stripe_subscription_id")
  stripeCustomerId    String?            @map("stripe_customer_id")
  paypalSubscriptionId String?           @unique @map("paypal_subscription_id")
  paypalPayerId       String?            @map("paypal_payer_id")
  paypalPlanId        String?            @map("paypal_plan_id")
  createdAt           DateTime           @default(now()) @map("created_at")
  updatedAt           DateTime           @updatedAt @map("updated_at")
  
  user                User               @relation(fields: [userId], references: [id], onDelete: Cascade)
  usage               Usage[]
  
  @@index([userId])
  @@index([status])
  @@map("subscriptions")
}

enum SubscriptionPlan {
  FREE
  PRO
  ENTERPRISE
}

enum SubscriptionStatus {
  ACTIVE
  CANCELLED
  EXPIRED
  TRIAL
}

model Usage {
  id                  String   @id @default(uuid())
  userId              String   @map("user_id")
  subscriptionId      String   @map("subscription_id")
  period              UsagePeriod @default(MONTHLY)
  articlesGenerated   Int      @default(0) @map("articles_generated")
  imagesGenerated     Int      @default(0) @map("images_generated")
  videosGenerated     Int      @default(0) @map("videos_generated")
  researchQueries     Int      @default(0) @map("research_queries")
  articlesPublished   Int      @default(0) @map("articles_published")
  periodStart         DateTime @map("period_start")
  periodEnd           DateTime @map("period_end")
  createdAt           DateTime @default(now()) @map("created_at")
  updatedAt           DateTime @updatedAt @map("updated_at")
  
  user                User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  subscription        Subscription @relation(fields: [subscriptionId], references: [id], onDelete: Cascade)
  
  @@unique([userId, period, periodStart])
  @@index([userId])
  @@index([subscriptionId])
  @@index([periodStart])
  @@map("usage")
}

enum UsagePeriod {
  MONTHLY
  YEARLY
}

model TokenUsage {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  action      String   // Action type (e.g., 'content_generation', 'research', 'image_generation')
  provider    String?  // AI provider (e.g., 'openai', 'gemini')
  tokensUsed  Int      @map("tokens_used")
  metadata    Json?    // Additional metadata (source, request details, etc.)
  source      String   @default("wordpress") // Source of usage ('wordpress', 'platform', 'api')
  createdAt   DateTime @default(now()) @map("created_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([createdAt])
  @@index([action])
  @@index([source])
  @@map("token_usage")
}

model GenerationFailure {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  service     String   // Service name (e.g., 'article_generation', 'image_generation', 'video_generation', 'research', 'seo_analysis')
  model       String?  // AI model used (e.g., 'gemini-3-pro-preview', 'gpt-4o')
  provider    String?  // AI provider (e.g., 'gemini', 'openai', 'anthropic', 'groq')
  errorType   String   @map("error_type") // Error type (e.g., 'API_ERROR', 'QUOTA_EXCEEDED', 'VALIDATION_ERROR', 'TIMEOUT', 'UNKNOWN')
  errorMessage String  @db.Text @map("error_message") // Error message
  inputSnippet String? @db.Text @map("input_snippet") // Snippet of input that caused the failure (truncated for privacy)
  metadata    Json?    // Additional metadata (request details, response status, etc.)
  createdAt   DateTime @default(now()) @map("created_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([service])
  @@index([errorType])
  @@index([createdAt])
  @@index([provider])
  @@map("generation_failures")
}

model PlatformApiKey {
  id          String   @id @default(uuid())
  userId      String   @unique @map("user_id")
  apiKey      String   @unique @map("api_key")
  name        String?  // Optional name for the key
  isActive    Boolean  @default(true) @map("is_active")
  lastUsedAt  DateTime? @map("last_used_at")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([apiKey])
  @@index([userId])
  @@index([isActive])
  @@map("platform_api_keys")
}

model Notification {
  id          String   @id @default(uuid())
  userId      String   @map("user_id")
  type        NotificationType
  title       String
  message     String
  metadata    Json?    // Additional data (feature, threshold, etc.)
  read        Boolean  @default(false)
  readAt      DateTime? @map("read_at")
  createdAt   DateTime @default(now()) @map("created_at")
  
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([read])
  @@index([createdAt])
  @@index([type])
  @@map("notifications")
}

enum NotificationType {
  QUOTA
  QUOTA_RESET
  SUBSCRIPTION
  SYSTEM
}

model Feedback {
  id            String      @id @default(uuid())
  userId        String      @map("user_id")
  contentType   ContentType
  provider      Provider
  model         String?     // Specific model used (e.g., "gemini-3-pro-preview", "gpt-4o")
  rating        Int         // 1-5 stars or -1 (thumbs down), 1 (thumbs up)
  comment       String?     @db.Text
  contentId     String?     @map("content_id") // Optional reference to article/media ID
  metadata      Json?       // Additional context (prompt used, generation params, etc.)
  createdAt     DateTime    @default(now()) @map("created_at")
  updatedAt     DateTime    @updatedAt @map("updated_at")
  
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId])
  @@index([contentType])
  @@index([provider])
  @@index([rating])
  @@index([createdAt])
  @@map("feedback")
}

enum ContentType {
  ARTICLE
  ARTICLE_SECTION
  ARTICLE_METADATA
  ARTICLE_CTA
  IMAGE
  VIDEO
  AUDIO
  RESEARCH
  SEO_ANALYSIS
}
