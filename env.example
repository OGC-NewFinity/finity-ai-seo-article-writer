# Backend Environment Variables
# Copy this file to .env in the project root and fill in the values

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:postgres@nova-xfinity-db:5432/nova_xfinity_auth

# JWT and Token Secrets (generate secure secrets using: openssl rand -hex 32)
SECRET=__REQUIRED__
USERS_VERIFICATION_TOKEN_SECRET=__REQUIRED__
USERS_RESET_PASSWORD_TOKEN_SECRET=__REQUIRED__

# CORS Configuration
BACKEND_CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Admin User Configuration (Required for initial setup)
ADMIN_EMAIL=__REQUIRED__
ADMIN_PASSWORD=__REQUIRED__

# Email/SMTP Configuration (Required for email verification and password reset)
# Gmail example (use App Password if 2FA is enabled):
SMTP_HOST=__REQUIRED__
SMTP_PORT=587
SMTP_USERNAME=__REQUIRED__
SMTP_PASSWORD=__REQUIRED__
EMAILS_FROM_EMAIL=__REQUIRED__
EMAILS_FROM_NAME=Novaâ€‘XFinity Support
EMAILS_ENABLED=true
FRONTEND_URL=http://localhost:3000

# AI Provider API Keys
# Get your API keys from the respective provider dashboards
GEMINI_API_KEY=__REQUIRED__ # Get from: https://aistudio.google.com/app/apikey (Required - primary AI provider)
OPENAI_API_KEY=             # Get from: https://platform.openai.com/api-keys (Optional - for OpenAI provider)
ANTHROPIC_API_KEY=          # Get from: https://console.anthropic.com/account/keys (Optional - for Claude provider)
GROQ_API_KEY=               # Get from: https://console.groq.com/keys (Optional - for Llama/Groq provider)

# Default AI Provider (if not set, defaults to 'gemini')
# Options: gemini, openai, anthropic, llama
DEFAULT_AI_PROVIDER=gemini

# Resend API Key (Optional - for email service in Node.js backend)
# Get from: https://resend.com/api-keys
# If not set, email service will log warnings but won't crash
EMAIL_API_KEY=
RESEND_API_KEY=

# OAuth Configuration (Optional - for social login)
# Google OAuth - Get credentials from https://console.cloud.google.com/
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
# Discord OAuth - Get credentials from https://discord.com/developers/applications
DISCORD_CLIENT_ID=
DISCORD_CLIENT_SECRET=
# Twitter/X OAuth - Get credentials from https://developer.twitter.com/
TWITTER_CLIENT_ID=
TWITTER_CLIENT_SECRET=

# Frontend Environment Variables
# Create a .env file in the project root for frontend (Vite reads from root)

# API URL for frontend
VITE_API_URL=http://localhost:8000

# Subscription API URL (Node.js backend)
# Default: http://localhost:8000 (as per task requirements)
# If Node.js backend runs directly on port 3001, set to: http://localhost:3001
VITE_SUBSCRIPTION_API_URL=http://localhost:8000


# PayPal Configuration (for subscriptions)
# Get credentials from: https://developer.paypal.com/
# If not set, PayPal features will be unavailable
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYPAL_MODE=sandbox
PAYPAL_PLAN_ID_PRO=
PAYPAL_PLAN_ID_ENTERPRISE=
PAYPAL_WEBHOOK_ID=

# Note: Get PAYPAL_WEBHOOK_ID from PayPal Developer Dashboard > My Apps & Credentials > Webhooks

# Stripe Configuration (for subscriptions)
# Get credentials from: https://dashboard.stripe.com/
# If not set, Stripe features will be unavailable
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=
STRIPE_PRICE_ID_PRO=
STRIPE_PRICE_ID_ENTERPRISE=

# Note: STRIPE_WEBHOOK_SECRET is provided by Stripe CLI when running `stripe listen`
# For local development, run: stripe listen --forward-to localhost:3001/api/webhooks/stripe
# Then copy the webhook signing secret (starts with whsec_...) to this variable